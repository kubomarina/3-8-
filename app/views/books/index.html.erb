<h1>Books</h1>

<table>
 <tr>
  <th>title</th>
  <th>body</th>
  
  
  </tr>
  <% @books.each do |book| %>
  <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
</tr>

  <% end %>
</table>

<h2>New book</h2>
<%= form_with model: @books, url:'books', local:true do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<div class=buttom><%= f.submit 'Create book' %></div>

<% end %>